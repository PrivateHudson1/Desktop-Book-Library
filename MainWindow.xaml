<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Icon="/images/icon.png"
        Title="Библиотека"
       Height="900" Width="1400"
                 xmlns:component="clr-namespace:Library.Components"
      
          xmlns:ic ="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
        Background="Black"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >


   

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <MediaElement x:Name="BackgroundVideo"
            Source="media/astronaut.mp4"
            LoadedBehavior="Manual" 
            UnloadedBehavior="Stop"
            Stretch="UniformToFill"
            MediaEnded="BackgroundVideo_MediaEnded"/>



        <Grid Grid.Row="0">

            <component:ErrorComponent x:Name="errorComponent"
                Grid.Row="0"
                   
      Visibility="Hidden"
     Width="300"
     Height="100"
         Margin="0 0 -1100 0"/>

            <component:ErrorComponent x:Name="errorComponentLeft"
           Grid.Row="0"
              
 Visibility="Hidden"
Width="300"
Height="100"
    Margin="0 0 1100 0"/>



            <component:ListComponent x:Name="listComponent"
                             Grid.Row="0"
                                
                      Width="1000"
                      Height="720"
                      Margin="0 -1600 0 0"/>

            <component:InfoBook x:Name="infoBookComponent"
                                Grid.Row="0"
                                 Width="800"
 Height="720"
 Margin="0 -1600 0 0"/>


            <component:CollageComponent x:Name="collageComponent"
                  Grid.Row="0"
                     
           Width="800"
           Height="720"
           Margin="0 -1600 0 0"/>

            <component:PlayerComponent x:Name="playerComponent"
           Grid.Row="0"
              
    Width="800"
    Height="720"
    Margin="0 -1600 0 0"/>


            <component:SearchComponent x:Name="searchComponent"
            Grid.Row="0"
               
     Width="800"
     Height="720"
     Margin="0 -1600 0 0"/>


            <component:ReadComponent x:Name="readComponent"
       Grid.Row="0"
          
Width="800"
Height="720"
Margin="0 -1600 0 0"/>

            <component:ListenComponent x:Name="listenComponent"
       Grid.Row="0"
          
Width="800"
Height="720"
Margin="0 -1600 0 0"/>

            <component:ProfileComponent x:Name="profileComponent"
       Grid.Row="0"
          
Width="1100"
Height="720"
Margin="0 -1600 0 0"/>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

        </Grid>
        
        
        <Border Grid.Row="1" Background="#FF1C1C1C" CornerRadius="15" BorderThickness="2" BorderBrush="#FFFB009E">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">


                <Button Style="{StaticResource IconButtonStyle7}" x:Name="listBooksBut" Click="listBooksBut_Click" Tag="0"/>
                <Button Style="{StaticResource IconButtonStyle2}" x:Name="searchBut" Click="searchBut_Click" Tag="1"/>
                <!--<Button Style="{StaticResource IconButtonStyle1}" x:Name="collageBut" Click="collageBut_Click" Tag="2"/>-->
                <Button Style="{StaticResource IconButtonStyle4}" x:Name="playerBut" Click="playerBut_Click" Tag="3"/>
                <Button Style="{StaticResource IconButtonStyle6}" x:Name="profileBut" Click="profileBut_Click" Tag="6"/>
                
            </StackPanel>
        </Border>



   



    </Grid>
</Window>
