    <Style x:Key="animatedColorTextRed" TargetType="TextBlock">
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="TextBlock.Loaded">
                <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                    <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                             From="WhiteSmoke" To="#FFED0F0F" Duration="0:0:0.6" />
                </Storyboard>
            </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DynamicBlinkTextStyle" TargetType="TextBlock">

        <Setter Property="Foreground" Value="Black"/>

        <Setter Property="Tag">
            <Setter.Value>
                <SolidColorBrush x:Name="BlinkOverlay" Color="Transparent"/>
            </Setter.Value>
        </Setter>


        <Setter Property="OpacityMask">
            <Setter.Value>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Grid>
                     
                            <Rectangle Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}"/>

                       
                            <Rectangle Fill="{Binding Tag, RelativeSource={RelativeSource AncestorType=TextBlock}}"/>
                        </Grid>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                      
                        <ColorAnimation
                
                        Storyboard.TargetProperty="Color"
                        From="Transparent"
                        To="#FFFB0707" 
                            Duration="0:0:0.3"
                        AutoReverse="True"/>

                      
                            <DoubleAnimation
                 
                        Storyboard.TargetProperty="Opacity"
                        From="0"
                        To="0.7"
                                Duration="0:0:0.3"
                        AutoReverse="True"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>


