<Window x:Class="Library.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
          xmlns:component="clr-namespace:Library.Components"
       Height="900" Width="1400"
         Background="Black"
 ResizeMode="NoResize"
         Icon="/images/icon.png"
              Title="Библиотека"
                WindowStartupLocation="CenterScreen">
    <Grid>

      

        <Grid.Resources>
            <BlurEffect x:Key="blurEffect" Radius="8"/>
        </Grid.Resources>

       


        <Grid>

            <MediaElement x:Name="BackgroundVideo"
                     Source="media/wally.mp4"
                     LoadedBehavior="Manual" 
                     UnloadedBehavior="Stop"
                     Stretch="UniformToFill"
                     MediaEnded="BackgroundVideo_MediaEnded"/>


          
        </Grid>

        <Border Style="{StaticResource DownloadBorder}" Width="400"
                Background="#80212121"
                
                Padding="20"
              
                Height="430">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Войти"
            FontSize="40"
            Foreground="WhiteSmoke"
            FontWeight="DemiBold"
            HorizontalAlignment="Center"
            Height="60"/>

                <TextBlock Text="Введите данные аккаунта"
                           Foreground="WhiteSmoke"
                           FontWeight="DemiBold"
                           HorizontalAlignment="Center"
                           Margin="10"
                           FontSize="20"/>




                <Grid>

                    <Border x:Name="InputBorder" 
             
                BorderThickness="4" 
                CornerRadius="20"  
                        Height="55"
                            Width="300"
                VerticalAlignment="Top"
                Background="Transparent">

                        <Border.BorderBrush>
                            <LinearGradientBrush x:Name="RainbowBrush" StartPoint="0,0" EndPoint="1,0" MappingMode="RelativeToBoundingBox" SpreadMethod="Repeat">
                                <LinearGradientBrush.RelativeTransform>
                                    <RotateTransform x:Name="RainbowRotate" CenterX="0.5" CenterY="0.5" Angle="0" />
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FFABADB3" Offset="0.0" />
                                <GradientStop Color="#FFABADB3" Offset="0.5" />
                                <GradientStop Color="#FFABADB3" Offset="1.0" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Border.Loaded">
                                <BeginStoryboard x:Name="beginStoryBoardBorder">
                                    <Storyboard RepeatBehavior="Forever" x:Name="storyBoardBorder">
                                        <DoubleAnimation
                  Storyboard.TargetName="RainbowRotate"
                  Storyboard.TargetProperty="Angle"
                  From="0" To="360"
                  Duration="0:0:5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>


                        <Grid>

                            <TextBlock x:Name="Placeholder" 
                           Text="Логин или почта" 
                           FontWeight="Regular"
                           Foreground="#FFABADB3" 
                           FontSize="20"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform x:Name="PlaceholderTransform" Y="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>


                            <TextBox x:Name="InputBox" 
                         Background="Transparent" 
                         BorderThickness="0"
                         FontSize="20" 
                                     FontWeight="Regular"
                         Foreground="WhiteSmoke"
                         VerticalContentAlignment="Center" 
                         HorizontalContentAlignment="Left"
                         Margin="10,0,10,0"
                         GotFocus="InputBox_GotFocus" 
                         LostFocus="InputBox_LostFocus"/>
                        </Grid>
                    </Border>
                </Grid>


                <Grid Margin="0 10 0 0">

                    <Border x:Name="InputBorder2" 
     
        BorderThickness="4" 
        CornerRadius="20"  
                Height="55"
                    Width="300"
        VerticalAlignment="Top"
        Background="Transparent">

                        <Border.BorderBrush>
                            <LinearGradientBrush x:Name="RainbowBrush2" StartPoint="0,0" EndPoint="1,0" MappingMode="RelativeToBoundingBox" SpreadMethod="Repeat">
                                <LinearGradientBrush.RelativeTransform>
                                    <RotateTransform x:Name="RainbowRotate2" CenterX="0.5" CenterY="0.5" Angle="0" />
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FFABADB3" Offset="0.0" />
                                <GradientStop Color="#FFABADB3" Offset="0.5" />
                                <GradientStop Color="#FFABADB3" Offset="1.0" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Border.Loaded">
                                <BeginStoryboard x:Name="beginStoryBoardBorder2">
                                    <Storyboard RepeatBehavior="Forever" x:Name="storyBoardBorder2">
                                        <DoubleAnimation
          Storyboard.TargetName="RainbowRotate2"
          Storyboard.TargetProperty="Angle"
          From="0" To="360"
          Duration="0:0:5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>


                        <Grid>

                            <TextBlock x:Name="Placeholder2" 
                   Text="Пароль" 
                   FontWeight="Regular"
                   Foreground="#FFABADB3" 
                   FontSize="20"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left"
                   Margin="10,0,0,0">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform x:Name="PlaceholderTransform2" Y="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>


                            <PasswordBox x:Name="InputBox2" 
                 Background="Transparent" 
                 BorderThickness="0"
                 FontSize="20" 
                             FontWeight="Regular"
                 Foreground="WhiteSmoke"
                 VerticalContentAlignment="Center" 
                 HorizontalContentAlignment="Left"
                 Margin="10,0,10,0"
                 GotFocus="InputBox_GotFocus2" 
                 LostFocus="InputBox_LostFocus2"/>
                        </Grid>
                    </Border>
                </Grid>

                <Button Style="{StaticResource IconButtonStyleTextForgotPassword}"
                        />

                <Button Style="{StaticResource RoundFux}"
                        Width="300"
                        Height="50"
                        Margin="25"
                        Content="Продолжить"
                        FontWeight="DemiBold"
                        x:Name="authBut"
                        Click="authBut_Click"/>


            </StackPanel>



        </Border>


        <component:ErrorComponent
      x:Name="errorComponent"
    Visibility="Hidden"
Width="300"
Height="100"
Margin="0 0 -1000 0"/>
        
        
    </Grid>
</Window>
