<UserControl x:Class="Library.Components.ListenComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Components"
             mc:Ignorable="d" 
             d:DesignHeight="820" d:DesignWidth="800"
            xmlns:ic ="https://github.com/helluvamatt/BootstrapIcons.Wpf/" xmlns:local1="clr-namespace:Library.Models">


    <UserControl.Resources>
        <!-- Эффект тени -->
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="2" Color="Black"/>

        <!-- Стиль кнопок в выпадающем меню -->
        <Style x:Key="DropdownItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                         CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFB009E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <Border Background="#801C1C1C" BorderBrush="#FF1C1C1C" BorderThickness="5">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="450"/>
               
                <RowDefinition/>
            </Grid.RowDefinitions>




            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <Grid Grid.Column="0">
                    <Image Width="450" 
         Height="400"
         Source="{Binding ImageSource}"
         x:Name="imageBook"/>
                </Grid>


                <Grid Grid.Column="1">

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Круть"
x:Name="nameBook"
FontSize="40"
Foreground="WhiteSmoke"
FontWeight="DemiBold"
Width="300"
TextWrapping="Wrap"
Height="50" 
          Margin="0 30 0 0"
TextAlignment="Center"/>
                        <TextBlock Text="Виктор Пелевин"
                                
FontSize="30"
x:Name="nameAuthor"
FontWeight="DemiBold"
Foreground="WhiteSmoke"
Width="300"
         
Height="50"
TextAlignment="Center"
TextWrapping="Wrap" />


                        <StackPanel Orientation="Horizontal" Margin="0 60 0 0" HorizontalAlignment="Center">
                            <Button Width="30" Height="30"
                            Style="{StaticResource IconButtonChevronLeft}" 
                                    Margin="0 0 30 0"/>

                            <Button Width="60" Height="60"
      
        
                            x:Name="StartPlayer"
                            Click="StartPlayer_Click"
                            Style="{StaticResource IconButtonStyleListenMusic}"/>   

                            <Button Width="30"
                                Height="30"
                                       Margin="30 0 0 0"
                                Style="{StaticResource IconButtonChevronRight}" />
                        </StackPanel>
                    </StackPanel>
                    
                    

                 
                </Grid>
              
            </Grid>



            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical" >
                    <StackPanel Orientation="Horizontal" Background="#FF1C1C1C">
                   
              
                        <Button Style="{StaticResource IconButtonListUl}"
                                x:Name="partsListBut"
                                Click="partsList_Click"/>


                        <TextBlock Text="Глава 1 из 14 " 
                                FontSize="20"
                                   x:Name="partsText"
                                Foreground="SlateGray"
                                       Margin="10 5 0 0"/>
                        <TextBlock Text="Прибытие"
                        Foreground="LightGray"
                        FontSize="25"
                        Margin="20 0 0 0"
                                       x:Name="namePartsText"/>   


                        <TextBlock x:Name="timerText"
            FontSize="25"
                                   Width="150"
                                   Text="00:00"
            Foreground="WhiteSmoke"
                                   Margin="250 0 0 0"/>
                    </StackPanel>




                    <Popup x:Name="DropdownPopup"
         Placement="Bottom"
         PlacementTarget="{Binding ElementName=partsListBut}"
         StaysOpen="False"
         AllowsTransparency="True"
         PopupAnimation="Slide">

                        <Border Background="#902C2C2C"
             Height="200"
              CornerRadius="10"
              Padding="10"
              Width="600"
              Effect="{StaticResource DropShadowEffect}">
                            <ScrollViewer>
                                <StackPanel>
                                    <Button Content="Глава 1 Прибытие" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 2 Соляристы" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 3 Гости" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 4 Сарториус" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 5 Хари" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 6 Малый апокриф" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 7 Совещание" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 8 Чудовища" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 9 Жидкий кислород" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 10 Разговор" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 11 Эксперимент" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 12 Сны" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 13 Успех" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                    <Button Content="Глава 14 Старый мимоид" Style="{StaticResource DropdownItemStyle}" Click="Item_Click" Height="50"/>
                                </StackPanel>
                            </ScrollViewer>
                            
                        </Border>
                    </Popup>




                </StackPanel>
            </Grid>
            
        </Grid>
        
    </Border>
</UserControl>
