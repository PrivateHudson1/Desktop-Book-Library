<UserControl x:Class="Library.Components.InfoBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Components"
             mc:Ignorable="d" 
           d:DesignHeight="820" d:DesignWidth="900">
    <Border CornerRadius="10" 
           Width="800" 
           Height="720" 
           BorderThickness="2" 
           Background="#801C1C1C"
            >


        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">

                <Image Width="330"
                       Height="330" 
                       Source="/media/FoxAi.jpg"
                       x:Name="imageBook"
                       VerticalAlignment="Top"
                       Margin="0 10 0 0"/>

                <TextBlock Text="Объем: 411 страниц 12+"
                           Foreground="WhiteSmoke"
                           FontWeight="DemiBold"
                           FontSize="20"
                           x:Name="additionalText"
                           Height="50"
                           Margin="10 10 0 0"/>

                <Button Style="{StaticResource RoundFux}"
                        Width="200"
                        Height="50" Margin="80,402,80,264"
                        Content="Добавить"
                        x:Name="addedButInfo"
                        Click="addedButInfo_Click"
                        FontWeight="DemiBold"/>

            </Grid>


            <Grid Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Hidden"
                              Height="700"
                              HorizontalScrollBarVisibility="Disabled"
                              CanContentScroll="True"
                              >


                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>


                        <Grid Grid.Row="0">
                            <TextBlock Text="Одиссей Фокс"
FontSize="30"
                     TextWrapping="Wrap"
                     x:Name="nameBookText"
Foreground="WhiteSmoke"
FontWeight="Bold"
Width="220"
Height="50"/>
                        </Grid>


                        <Grid Grid.Row="1">

                            <TextBlock Text="Об авторе: "
                           
              FontSize="30"
              Foreground="WhiteSmoke"
              FontWeight="DemiBold"
             />

                        </Grid>


                        <Grid Grid.Row="2">

                            <TextBlock Text="Антон Карелин -
 писатель и автор множества игр. Общий тираж изданных на бумаге книг около полумиллиона: фэнтези и научная фантастика, детективы, книги об играх."
                               TextWrapping="Wrap"
                                       x:Name="aboutAuthorText"
                                       Width="400"
              FontSize="25"
              Foreground="LightGray"
              FontWeight="Regular"
             />
                        </Grid>
                        
                        <Grid Grid.Row="3">
                            <TextBlock Text="О книге:"
                               FontSize="30"
                               Foreground="WhiteSmoke"
                               FontWeight="DemiBold"/>

                          

                        </Grid>

                        <Grid Grid.Row="4">
                            <TextBlock Text="Чем отличается управление обществом от управления компьютером? Чем отличается обмен информацией между людьми – и между человеком и искусственным интеллектом? В своей классической работе «Кибернетика и общество» Норберт Винер утверждает, что управление любой системой – будь то живой организм, техническое устройство или общественная формация – подчиняется одним и тем же универсальным законам.

В сборник также вошла работа Норберта Винера «Корпорация “Бог и голем”», в которой автор размышляет о том, какие моральные ловушки ставит перед человеком все расширяющееся поле взаимодействия с искусственным интеллектом."
                               TextWrapping="Wrap"
                               FontSize="25"
                                          Width="400"
                                   x:Name="aboutBook"
                               Foreground="LightGray"
                               FontWeight="Regular"/>
                        </Grid>
                    </Grid>
                    

                </ScrollViewer>
              
             
            </Grid>
            
         
        </Grid>
        
        
    </Border>
</UserControl>
