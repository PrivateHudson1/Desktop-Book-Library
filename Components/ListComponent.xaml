<UserControl x:Class="Library.Components.ListComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Components"
               xmlns:component="clr-namespace:Library.Components"
             mc:Ignorable="d" 
             d:DesignHeight="820" d:DesignWidth="1100">
    
    
    
    
    <Border CornerRadius="10" 
ClipToBounds="false"
           Height="720" 
           BorderThickness="2" 
           Background="#801C1C1C">




        <Grid ClipToBounds="false">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

                <TextBlock Text="Мои книги" 
                       Foreground="#FFFB009E"
                       FontWeight="DemiBold"
                       FontSize="40"
                           Height="50"
                           VerticalAlignment="Top"
                       HorizontalAlignment="Center"/>

            <Grid Grid.Row="0">

             
                <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                              ClipToBounds="false"
                                 HorizontalAlignment="Center"
                                 VerticalScrollBarVisibility="Disabled"
                                 Width="850" Height="600"
                                 Background="Transparent">
                    <ItemsControl x:Name="SliderItems"
                                
                                  Background="Transparent"
                                  d:ItemsSource="{d:SampleData ItemCount=3}">


                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Background="Transparent" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>


                        <ItemsControl.RenderTransform>
                            <TranslateTransform x:Name="ItemsTransform"/>
                        </ItemsControl.RenderTransform>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <Border Width="270"
                                         Height="550"
                                        Margin="0 0 10 0"
                                         Style="{StaticResource borderFux}"     
                                            IsHitTestVisible="True"
                                     SnapsToDevicePixels="True"                  
                                      x:Name="firstBookBorder">

                                    <Grid Background="Transparent">

                                        <StackPanel Orientation="Vertical" Background="Transparent">
                                            <Image Source="{Binding image}"
 Width="140"
                                                   Height="160"
 />
                                            <TextBlock Text="{Binding fileName}"
                                 FontSize="30"
                                                       TextWrapping="wrap"
                              Foreground="WhiteSmoke"
                              Width="230"
                              Height="130"
                              TextAlignment="Center"
                              VerticalAlignment="Center"/>

                                            <TextBlock Text="{Binding Author}"
                            FontSize="20"
                                       TextWrapping="Wrap"
                                Foreground="WhiteSmoke"
                                Width="230"
                                Height="50"
                                TextAlignment="Center"
                                VerticalAlignment="Center"/>
                                            <Button Style="{StaticResource RoundFux}" Height="50" 
                                    Content="Читать"
                                    FontWeight="DemiBold"
                                    Width="150"
                                    x:Name="readBut"
                                    Click="readBut_Click"
                                  Margin="0 0 0 20"/>
                                            <Button Style="{StaticResource RoundGray}"
                                    Height="50"
                                    Content="Скачать"
                                    Width="150"
                                    FontWeight="DemiBold"
                                    x:Name="downloadBut"
                                    Click="downloadBut_Click"
                                        Margin="0 0 0 20"
                                    />
                                            <Button Style="{StaticResource RoundGray}"
                                    Height="50"
                                    x:Name="deleteFromCollection"
                                    Click="deleteFromCollection_Click"
                                    Content="Удалить"
                                    Width="150"
                                    FontWeight="DemiBold"/> 
                                     </StackPanel>



                                    </Grid>

                                </Border>


                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer
                                >



            </Grid>


            <Grid Grid.Row="1">
                <Button Style="{StaticResource IconButtonStyleLeftRedirect}"
       Margin="10 0 20 0"
       x:Name="leftScrollButt"
               
       Click="leftScrollButt_Click" 
               HorizontalAlignment="Left"/>


                <Button Style="{StaticResource IconButtonStyleRightRedirect}"
                        Margin="10 0 10 0" x:Name="rightScrollBut"
                    Click="rightScrollBut_Click"
                            HorizontalAlignment="Right"
/>



            </Grid>


         
            <component:DownloadComponent x:Name="downloadComponent"
      
          
Width="400"
Height="480"
Margin="0 -1400 0 0"
ConditionError="downloadComponent_ConditionError"
ConditionMet="downloadComponent_ConditionMet"/>



            <component:ErrorComponent 
                x:Name="errorComponent"
                Visibility="Hidden"
                Width="300"
                
                                      Height="100"
                                      Margin="0 0 -500 0"/>


        </Grid>


    </Border>

</UserControl>
