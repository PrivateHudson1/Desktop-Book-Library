<UserControl x:Class="Library.Components.ErrorComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Components"
             mc:Ignorable="d" 
                xmlns:ic ="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
             d:DesignHeight="100" d:DesignWidth="300">
    <Border Style="{StaticResource DownloadBorder}" Background="#80212121"
            >
        <StackPanel Orientation="Horizontal" Width="280">
            <ic:BootstrapIcon Width="40" 
                   Height="40"
                              x:Name="iconState"
                   Icon="XCircle"
                   HorizontalAlignment="Left"
                   Foreground="#FFE81111"/>

            <TextBlock Text="Неправильный логин или пароль" Width="210"
                       x:Name="errorTextBlock"
            FontSize="18"
                       FontWeight="DemiBold"
                       TextWrapping="Wrap"
                       Foreground="WhiteSmoke"
                       VerticalAlignment="Center"
                       Margin="10 0 0 0"/>
        </StackPanel>
       
    </Border>
</UserControl>
