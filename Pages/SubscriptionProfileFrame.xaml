<Page x:Class="Library.Pages.SubscriptionProfileFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
        xmlns:ic ="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
      d:DesignHeight="720" d:DesignWidth="700"
      Title="SubscriptionProfileFrame">

    

        <Grid>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Статус подписки:"
              Foreground="WhiteSmoke"
              FontSize="40"
              Width="350"
              Height="60"
              FontWeight="DemiBold"/>


                <Border Style="{StaticResource animatedColorBorderGreen}"
           Width="200"
           Height="45"
                        
                        Margin="0 10 0 0">
                    <TextBlock Text="Активно"
                               FontSize="30"
                               x:Name="statusText"
                               
                               HorizontalAlignment="Center"
                               Foreground="WhiteSmoke"
                               FontWeight="DemiBold"/>
                </Border>


                <Border Style="{StaticResource animatedColorBorderGreen}"
                        Height="250"
                        Width="500"
                        Margin="0 10 0 0">
                    <StackPanel Orientation="Vertical">
                     
                            <TextBlock Text="План: Премиум"
                            FontSize="25"
                            HorizontalAlignment="Center"
                            Foreground="WhiteSmoke"
                            FontWeight="DemiBold"
                                       Margin="0 0 0 10"/>

                            <TextBlock Text="Истекает: Июнь 30, 2025"
                       FontSize="25"
                       Foreground="WhiteSmoke"
                                       FontWeight="DemiBold"
                       HorizontalAlignment="Center"
                                         Margin="0 0 0 10"/>

                        <TextBlock Text="Цена: 300 ₽ / месяц"
                                   FontSize="25"
                                   Foreground="WhiteSmoke"
                                   FontWeight="DemiBold"
                                   HorizontalAlignment="Center"
                                    Margin="0 0 0 10"/>

                        <TextBlock Text="Способ оплаты: Банковская карта РФ"
                                   FontSize="25"
                                   Foreground="WhiteSmoke"
                                   FontWeight="DemiBold"
                                   HorizontalAlignment="Center"
                                    Margin="0 0 0 20"/>

                        <Button Style="{StaticResource RoundFux}"
                             Width="300"
                             Height="50"
                                FontSize="25"
                                FontWeight="DemiBold"
                             Content="Продлить подписку"
                             x:Name="saveBut"
                                Click="saveBut_Click"/>  
                        </StackPanel>
                   
                    
                </Border>


                <Border Style="{StaticResource animatedColorBorderGreen}"
                        Height="330"
                        Margin="0 10 0 0">

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Детали подписки:"
                                   FontSize="25"
                                   FontWeight="Medium"
                                   Foreground="WhiteSmoke"/>

                        <StackPanel Orientation="Horizontal" Height="40" Margin="0 5 0 0">
                            <ic:BootstrapIcon Icon="dot" Foreground="WhiteSmoke"/>
                            <TextBlock Text="Доступ ко всем книгам"
                                       FontSize="25"
                                       Foreground="WhiteSmoke"
                                       FontWeight="Medium"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Height="40" Margin="0 5 0 0">
                            <ic:BootstrapIcon Icon="dot" Foreground="WhiteSmoke"/>
                            <TextBlock Text="Неограниченное скачивание"
            FontSize="25"
            Foreground="WhiteSmoke"
            FontWeight="Medium"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Height="40" Margin="0 5 0 0">
                            <ic:BootstrapIcon Icon="dot" Foreground="WhiteSmoke"/>
                            <TextBlock Text="Приоритетная тех.поддержка"
            FontSize="25"
            Foreground="WhiteSmoke"
            FontWeight="Medium"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Height="40" Margin="0 5 0 0">
                            <ic:BootstrapIcon Icon="dot" Foreground="WhiteSmoke"/>
                            <TextBlock Text="Кастомизация интерфейса"
            FontSize="25"
            Foreground="WhiteSmoke"
            FontWeight="Medium"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Height="40" Margin="0 5 0 0">
                            <ic:BootstrapIcon Icon="dot" Foreground="WhiteSmoke"/>
                            <TextBlock Text="Доступ к закрытому коммьюнити"
            FontSize="25"
            Foreground="WhiteSmoke"
            FontWeight="Medium"/>
                        </StackPanel>

                        <Button Height="50" Style="{StaticResource RoundGray}"
                                Margin="0 10 0 0"
                                Width="300"

                                Content="Отменить подписку"
                                FontSize="25"
                                FontWeight="DemiBold"/>

                    </StackPanel>
                </Border>
                
              
            </StackPanel>
          
        </Grid>
        
        
   

</Page>
