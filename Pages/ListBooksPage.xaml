<Page x:Class="Library.Pages.ListBooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      xmlns:ic ="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
         xmlns:component="clr-namespace:Library.Components"
      d:DesignHeight="620" d:DesignWidth="900"
      Title="ListBooksPage"
      Background="Green"
     >
    <Border CornerRadius="10" 
           Width="800" 
           Height="520" 
           BorderThickness="2" 
           Background="#FF1C1C1C">


        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">
                <StackPanel Orientation="Vertical">

                    <TextBlock Text="Выберите жанр"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               Foreground="WhiteSmoke"
                               FontWeight="DemiBold"/>

                    <Button Style="{StaticResource IconButtonStyleText1}"
                            Width="200"
                            Height="30"/>
                    <Button Style="{StaticResource IconButtonStyleText2}"
                            Width="200"
                            Height="30"/>
                    <Button Style="{StaticResource IconButtonStyleText3}"
                            Width="200"
                            Height="30"/>
                    <Button Style="{StaticResource IconButtonStyleText4}"
                            Width="200"
                            Height="30"/>
                    <Button Style="{StaticResource IconButtonStyleText5}"
                            Width="200"
                            Height="30"/>




                </StackPanel>
            </Grid>



            <Grid Grid.Column="1" >
                <TextBox Width="400" 
                 Height="40"
                 Background="Transparent"
                 VerticalAlignment="Top"
                     Foreground="WhiteSmoke"
                     FontSize="20">

                </TextBox>

                <ic:BootstrapIcon Icon="Search"
                          Width="40"
                              Height="40"
                              Foreground="#FFFB009E" Margin="31,0,525,476" />
            </Grid>

        </Grid>






    </Border>

</Page>
