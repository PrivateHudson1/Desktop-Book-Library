<Page x:Class="Library.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
     xmlns:ic ="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
           d:DesignHeight="620" d:DesignWidth="900">

    <Border Width="800" Height="520" BorderBrush="Black" BorderThickness="2">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Первый блок с кнопкой и текстом -->
                <StackPanel Margin="10">
                    <Button Content="Кнопка 1" Height="40" Width="100"/>
                    <TextBlock Text="Текст 1" FontSize="16" Margin="10"/>
                </StackPanel>

                <!-- Второй блок с кнопкой и текстом -->
                <StackPanel Margin="10">
                    <Button Content="Кнопка 2" Height="40" Width="100"/>
                    <TextBlock Text="Текст 2" FontSize="16" Margin="10"/>
                </StackPanel>

                <!-- Третий блок с кнопкой и текстом -->
                <StackPanel Margin="10">
                    <Button Content="Кнопка 3" Height="40" Width="100"/>
                    <TextBlock Text="Текст 3" FontSize="16" Margin="10"/>
                </StackPanel>

                <!-- Дополнительные блоки для демонстрации прокрутки -->
                <StackPanel Margin="10">
                    <Button Content="Кнопка 4" Height="40" Width="100"/>
                    <TextBlock Text="Текст 4" FontSize="16" Margin="10"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Button Content="Кнопка 5" Height="40" Width="100"/>
                    <TextBlock Text="Текст 5" FontSize="16" Margin="10"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Button Content="Кнопка 6" Height="40" Width="100"/>
                    <TextBlock Text="Текст 6" FontSize="16" Margin="10"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Button Content="Кнопка 7" Height="40" Width="100"/>
                    <TextBlock Text="Текст 7" FontSize="16" Margin="10"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Button Content="Кнопка 8" Height="40" Width="100"/>
                    <TextBlock Text="Текст 8" FontSize="16" Margin="10"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Button Content="Кнопка 9" Height="40" Width="100"/>
                    <TextBlock Text="Текст 9" FontSize="16" Margin="10"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Button Content="Кнопка 10" Height="40" Width="100"/>
                    <TextBlock Text="Текст 10" FontSize="16" Margin="10"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Page>
