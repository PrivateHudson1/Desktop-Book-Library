<Page x:Class="Library.Pages.ChangePassProfileFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="620" d:DesignWidth="600"
      Title="ChangePassProfileFrame">

    <Border CornerRadius="10"
            BorderBrush="black"
            BorderThickness="1"
            Background="#90212121">

        <StackPanel Orientation="Vertical">
            <TextBlock Text="Для смены пароля укажите действующую почту"
            FontSize="25"
            HorizontalAlignment="Center"
            Foreground="WhiteSmoke"/>



            <Grid Margin="0 30 0 0">

                <Border x:Name="InputBorder" 
             
                BorderThickness="4" 
                CornerRadius="20"  
                        Height="55"
                            Width="300"
                VerticalAlignment="Top"
                Background="Transparent">

                    <Border.BorderBrush>
                        <LinearGradientBrush x:Name="RainbowBrush" StartPoint="0,0" EndPoint="1,0" MappingMode="RelativeToBoundingBox" SpreadMethod="Repeat">
                            <LinearGradientBrush.RelativeTransform>
                                <RotateTransform x:Name="RainbowRotate" CenterX="0.5" CenterY="0.5" Angle="0" />
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FFABADB3" Offset="0.0" />
                            <GradientStop Color="#FFABADB3" Offset="0.5" />
                            <GradientStop Color="#FFABADB3" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>

                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Border.Loaded">
                            <BeginStoryboard x:Name="beginStoryBoardBorder">
                                <Storyboard RepeatBehavior="Forever" x:Name="storyBoardBorder">
                                    <DoubleAnimation
                  Storyboard.TargetName="RainbowRotate"
                  Storyboard.TargetProperty="Angle"
                  From="0" To="360"
                  Duration="0:0:5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>


                    <Grid>

                        <TextBlock x:Name="Placeholder" 
                           Text="Действующая почта" 
                           FontWeight="Regular"
                           Foreground="#FFABADB3" 
                           FontSize="20"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0">
                            <TextBlock.RenderTransform>
                                <TranslateTransform x:Name="PlaceholderTransform" Y="0"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>


                        <TextBox x:Name="InputBox" 
                         Background="Transparent" 
                         BorderThickness="0"
                         FontSize="20" 
                                     FontWeight="Regular"
                         Foreground="WhiteSmoke"
                         VerticalContentAlignment="Center" 
                         HorizontalContentAlignment="Left"
                         Margin="10,0,10,0"
                         GotFocus="InputBox_GotFocus" 
                         LostFocus="InputBox_LostFocus"/>
                    </Grid>
                </Border>
            </Grid>

            <TextBlock Text="Новый пароль будет сгенерирован автоматически и отправлен в письме"
                       Height="90"
                       HorizontalAlignment="Center"
                       FontSize="25"
                       Margin="0 30 0 0"
                       Foreground="WhiteSmoke"
                        TextWrapping="Wrap"/>

            <Button Style="{StaticResource RoundFux}"
                    Width="300"
                    x:Name="changePass"
                    Click="changePass_Click"
                    Height="50"
                    Content="Сгенерировать новый пароль"
                    FontWeight="Medium"/>


            <TextBlock Text="Ваш новый пароль: "
                       Foreground="WhiteSmoke"
                       FontSize="25"
                       HorizontalAlignment="Center"
                       Margin="0 30 0 0"
                       x:Name="passTitleText"
                       Visibility="Collapsed"/>

            <TextBlock Foreground="White"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       Margin="20"
                       x:Name="newPassText"
                       Visibility="Collapsed"/>

        </StackPanel>
        
       
    </Border>
</Page>
