<Page x:Class="Library.Pages.MainProfileFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
         xmlns:ic ="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
      d:DesignHeight="720" d:DesignWidth="700"
      Title="MainProfileFrame">

    <Border Background="#90212121" Width="600"
          Height="600"
            CornerRadius="10"
            BorderBrush="Black"
            BorderThickness="1"
          >
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

            <TextBlock Text="Информация об аккаунте:"
                       FontSize="45"
                       FontWeight="DemiBold"
                       Foreground="WhiteSmoke"/>

            <TextBlock Text="Имя:"
                       Margin="0 20 0 0"
                       x:Name="nameUser"
                       FontSize="35"
                       FontWeight="Medium"
                       Foreground="WhiteSmoke"/>
            <TextBlock Text="Email:"
              Margin="0 20 0 0"
              FontSize="35"
                       x:Name="emailUser"
              FontWeight="Medium"
              Foreground="WhiteSmoke"/>
            <TextBlock Text="Дата регистрации: 24.03.2025"
                       x:Name="registrationUser"
              Margin="0 20 0 0"
              FontSize="35"
              FontWeight="Medium"
              Foreground="WhiteSmoke"/>
            <TextBlock Text="Статистика:"
              Margin="0 20 0 0"
              FontSize="35"
              FontWeight="Medium"
              Foreground="WhiteSmoke"/>

            <TextBlock Text="Книг в коллекции: 127"
                       Foreground="WhiteSmoke"
                       FontSize="25"
                       FontWeight="Medium"
                       Margin="30 20 0 0"/>

            <TextBlock  Foreground="WhiteSmoke"
 FontSize="25"
                        FontWeight="Medium"
 Text="Прочитано за год: 23"
 Margin="30 20 0 0"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock  Foreground="WhiteSmoke"
FontSize="25"
                            FontWeight="Medium"
Text="Рейтинг: Книжный гурман"
Margin="30 20 0 0"/>

                <ic:BootstrapIcon Icon="StarFill" Width="30"
                                  Height="30"
                          Margin="20 20 0 0"
                                 
                                  Foreground="#FFD2E810"/>
                <ic:BootstrapIcon Icon="StarFill" Width="30"
                    Height="30"
            Margin="20 20 0 0"
                   
                    Foreground="#FFD2E810"/>
                <ic:BootstrapIcon Icon="StarFill" Width="30"
                    Height="30"
            Margin="20 20 0 0"
                   
                    Foreground="#FFD2E810"/>
                <ic:BootstrapIcon Icon="StarFill" Width="30"
                    Height="30"
            Margin="20 20 0 0"
                   
                    Foreground="#FFD2E810"/>
                <ic:BootstrapIcon Icon="Star" Width="30"
                    Height="30"
            Margin="20 20 0 0"
                   
                    Foreground="#FFD2E810"/>
            </StackPanel>
           
        </StackPanel>
    </Border>
</Page>
